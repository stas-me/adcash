{% extends 'base.html.twig' %}

{% block body %}
    <div class="col-12">
        {{ form_start(orderForm) }}

            {{ form_widget(orderForm) }}

            <button type="submit" class="btn btn-primary" formnovalidate> Add! </button>
        {{ form_end(orderForm) }}

        <table class="table">
            <thead>
            <tr>
                <th scope="col">ID</th>
                <th scope="col">User</th>
                <th scope="col">Product</th>
                <th scope="col">Price</th>
                <th scope="col">Quantity</th>
                <th scope="col">Total</th>
                <th scope="col">Date</th>
                <th scope="col">Actions</th>
            </tr>
            </thead>
            <tbody>

                {% for order in orders %}
                    <tr>
                        <th scope="row">{{ order.id }}</th>
                        <td>{{ order.user.name }}</td>
                        <td>{{ order.product.name }}</td>
                        <td>{{ order.product.price }} EUR</td>
                        <td>{{ order.quantity }}</td>
                        <td>{{ order.total }}</td>
                        <td>{{ order.dateString}}</td>
                        <td>
                            <span class="edit"> Edit </span>
                            <span class="delete-btn" onclick="ConfirmDelete('{{ path('app_order_delete', {'id' : order.id}) }}')"> Delete </span>
                        </td>
                    </tr>
                {% endfor %}

            </tbody>
        </table>
    </div>
{% endblock %}